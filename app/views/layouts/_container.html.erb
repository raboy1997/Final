<div class="container">
  <div class="row">
    <div class="col-md-8">
      <%= yield %>
    </div>
    <div class="col-md-4">
      <ul class="list-group">
        <li>
          <%= link_to "All Articles", root_path, class: "list-group-item" %>
        </li>
        <% Category.all.each do |category| %>
            <li>
              <%= link_to category.name, articles_path(category: category.name), class: "list-group-item" %>
            </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
