<div class="center">
  <div class="page-header">
    <h1>Вход</h1>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
     <div id="loginForm ">
      <div class="field">
        <label for="user_email">Email</label><br/>
        <input type="email" value="" name="user[email]" id="user_email">
      </div>

      <div class="field">
        <label for="user_password">Пароль</label></br>
        <input autocomplete="off" type="password" name="user[password]" id="user_password">
      </div>

      <% if devise_mapping.rememberable? -%>
          <div class="field">
            <input type="checkbox" value="1" name="user[remember_me]" id="user_remember_me">
            <label for="user_remember_me">Запам’ятати мене</label>
          </div>
      <% end -%>

      <div class="actions">
        <input type="submit" name="commit" value="Ввійти" class="btn btn-large btn-primary">
      </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>


