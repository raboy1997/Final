<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="container">
  <div class="row">

    <!-- panel preview -->
    <div class="col-sm-5">
      <h4>Додати лекцію</h4>
      <div class="panel panel-default">
        <div class="panel-body form-horizontal payment-form">
          <div class="new-select-style-wpandyou">
            <p><%= f.collection_select :category_id, Category.all, :id, :name, { promt: "Choose a Category" } %></p>
            </div>
          <div class="form-group">
            <label for="concept" class="col-sm-3 control-label">Назва теми</label>
            <div class="col-sm-9">
            <%= f.text_field :title %>
            </div>
          </div>
          <div class="form-group">
            <label for="description" class="col-sm-3 control-label"> Ім'я файлу </label>
            <div class="col-sm-9">
             <%= f.text_area :content %>
            </div>
          </div>
          <div class="form-group">
            <label for="amount" class="col-sm-3 control-label">Имя файла</label>
            <div class="col-sm-9">
              <%= f.text_field :filename %>
            </div>
          </div>
          <div class="form-group">
            <label for="amount" class="col-sm-3 control-label">Посилання на файл</label>
            <div class="col-sm-9">
              <%= f.text_field :filelink %>
            </div>
          </div>
          <div class="form-group">
            <label for="amount" class="col-sm-3 control-label">Ім'я тесту</label>
            <div class="col-sm-9">
              <%= f.text_field :test_name %>
            </div>
          </div>
          <div class="form-group">
            <label for="amount" class="col-sm-3 control-label">Посилання на тест</label>
            <div class="col-sm-9">
              <%= f.text_field :test_link %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-12 text-right">
              <input  class="btn btn-default preview-add-button " name="commit" type="submit" value="Додати"/>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% end %>