<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="container">
  <div class="row">

    <!-- panel preview -->
    <div class="col-sm-5">
      <h4>Додати лекцію</h4>
      <div class="panel panel-default">
        <div class="panel-body form-horizontal payment-form">
          <div class="new-select-style-wpandyou">
            <p><%= f.collection_select :category_id, Category.all, :id, :name, { promt: "Choose a Category" } %></p>
            </div>
          <div class="form-group">
            <label for="concept" class="col-sm-3 control-label">Название темы</label>
            <div class="col-sm-9">
              <input type="text" class="form-control" id="article_title" name="article[title]" >

            </div>
          </div>
          <div class="form-group">
            <label for="description" class="col-sm-3 control-label">Краткое описание темы </label>
            <div class="col-sm-9">
              <textarea class="form-control" id="article_content" name="article[content]" ></textarea>
            </div>
          </div>
          <div class="form-group">
            <label for="amount" class="col-sm-3 control-label">Имя файла</label>
            <div class="col-sm-9">
              <input  class="form-control"  id="article_filename" name="article[filename]">
            </div>
          </div>
          <div class="form-group">
            <label for="amount" class="col-sm-3 control-label">Ссылка на файл</label>
            <div class="col-sm-9">
              <input  class="form-control"  id="article_filelink" name="article[filelink]" >
            </div>
          </div>
          <div class="form-group">
            <label for="amount" class="col-sm-3 control-label">Имя теста</label>
            <div class="col-sm-9">
              <input  class="form-control" id="article_test_name" name="article[test_name]" >
            </div>
          </div>
          <div class="form-group">
            <label for="amount" class="col-sm-3 control-label">Ссылка на тест</label>
            <div class="col-sm-9">
              <input class="form-control" id="article_test_link " name="article[test_link ">
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-12 text-right">
              <input type="button" class="btn btn-default preview-add-button " name="commit" type="submit" value="Add"/>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% end %>